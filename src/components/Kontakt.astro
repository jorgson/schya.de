import Wave from "./Wave.astro";
---

<section class="relative bg-light-green pb-60">
  <svg
    viewBox="0 0 1440 192"
    xmlns="http://www.w3.org/2000/svg"
    class="absolute z-10 -top-[40px] sm:-top-[60px] md:-top-[120px] xl:-top-[160px]"
    data-astro-source-file="/Users/jorgson/schya.de/src/components/WhatWeDo.astro"
    data-astro-source-loc="16:37">
    <path
      fill="#e1f0d6"
      fill-opacity="1"
      d="
    M0,128
    L48,101.3
    C96,75,192,21,288,10.7
    C384,0,480,32,576,53.3
    C672,75,768,85,864,96
    C960,107,1056,117,1152,117.3
    C1248,117,1344,107,1392,101.3
